---
import PostHog from "../components/posthog.astro";

const DEFAULT_DESCRIPTION = "Helpmaton - Simple workspaces for managing AI agents";
const DEFAULT_IMAGE = "/images/hero.jpg";

interface Props {
  title: string;
  description?: string;
  image?: string;
  /** Recommended: 1200 for OG/Twitter card */
  imageWidth?: number;
  /** Recommended: 630 for OG/Twitter card */
  imageHeight?: number;
  /** Alt text for the OG image (accessibility and some platforms) */
  imageAlt?: string;
  type?: string;
}

const { title, description = DEFAULT_DESCRIPTION, image = DEFAULT_IMAGE, imageWidth = 1200, imageHeight = 630, imageAlt, type = "website" } = Astro.props;

const imagePath = image.startsWith("http") ? image : image.startsWith("/") ? image : `/${image}`;
const imageUrl = Astro.site ? new URL(imagePath, Astro.site).href : null;
const canonicalUrl = Astro.url && Astro.site ? new URL(Astro.url.pathname, Astro.site).href : null;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    {/* Open Graph */}
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content={type} />
    {canonicalUrl && <meta property="og:url" content={canonicalUrl} />}
    {imageUrl && <meta property="og:image" content={imageUrl} />}
    {imageUrl && <meta property="og:image:width" content={String(imageWidth)} />}
    {imageUrl && <meta property="og:image:height" content={String(imageHeight)} />}
    {imageUrl && imageAlt && <meta property="og:image:alt" content={imageAlt} />}
    {/* Twitter Card */}
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    {imageUrl && <meta name="twitter:image" content={imageUrl} />}
    {imageUrl && imageAlt && <meta name="twitter:image:alt" content={imageAlt} />}
    <PostHog />
    {/* LinkedIn Campaign Tracking */}
    <script is:inline define:vars={{ _linkedin_partner_id: "8635162" }}>
      window._linkedin_data_partner_ids = window._linkedin_data_partner_ids || [];
      window._linkedin_data_partner_ids.push(_linkedin_partner_id);
    </script>
    <script is:inline>
      (function(l) {
        if (!l){window.lintrk = function(a,b){window.lintrk.q.push([a,b])};
        window.lintrk.q=[]}
        var s = document.getElementsByTagName("script")[0];
        var b = document.createElement("script");
        b.type = "text/javascript";b.async = true;
        b.src = "https://snap.licdn.com/li.lms-analytics/insight.min.js";
        s.parentNode.insertBefore(b, s);
      })(window.lintrk);
    </script>
    <noscript>
      <img height="1" width="1" style="display:none;" alt="" src="https://px.ads.linkedin.com/collect/?pid=8635162&fmt=gif" />
    </noscript>
  </head>
  <body>
    <slot />
  </body>
</html>

