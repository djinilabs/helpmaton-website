---
const plans = [
  {
    name: "STARTER",
    price: "$29",
    period: "/month",
    description: "Perfect for individuals and small projects",
    features: [
      "1 Workspace",
      "5 Agents",
      "100 Documents",
      "10,000 API calls/month",
      "Email Support",
    ],
    cta: "START TRIAL",
    popular: false,
  },
  {
    name: "PRO",
    price: "$99",
    period: "/month",
    description: "For growing teams and businesses",
    features: [
      "5 Workspaces",
      "Unlimited Agents",
      "Unlimited Documents",
      "100,000 API calls/month",
      "Priority Support",
      "Custom Integrations",
    ],
    cta: "START TRIAL",
    popular: true,
  },
  {
    name: "ENTERPRISE",
    price: "CUSTOM",
    period: "",
    description: "For large organizations with custom needs",
    features: [
      "Unlimited Workspaces",
      "Unlimited Agents",
      "Unlimited Documents",
      "Unlimited API calls",
      "Dedicated Support",
      "Custom Integrations",
      "SLA Guarantee",
      "On-premise Options",
    ],
    cta: "CONTACT SALES",
    popular: false,
  },
];
---

<section id="pricing" class="bg-white p-8 py-16">
  <div class="max-w-6xl mx-auto">
    <div class="border-2 border-black p-8 mb-12 text-center">
      <h2 class="text-5xl font-bold uppercase mb-4">PRICING</h2>
      <p class="text-lg opacity-75">
        Choose the plan that fits your needs. All plans include a 7-day free trial.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {plans.map((plan) => (
        <div
          class={`border-2 p-8 ${
            plan.popular
              ? "border-accent bg-accent text-white"
              : "border-black bg-white"
          }`}
        >
          {plan.popular && (
            <div class="text-center mb-4">
              <span class="inline-block border-2 border-white bg-white text-accent px-4 py-1 font-bold uppercase text-sm">
                MOST POPULAR
              </span>
            </div>
          )}
          <h3 class="text-3xl font-bold uppercase mb-2">{plan.name}</h3>
          <div class="mb-4">
            <span class="text-5xl font-bold">{plan.price}</span>
            <span class="text-lg">{plan.period}</span>
          </div>
          <p class="text-sm opacity-90 mb-6">{plan.description}</p>
          <ul class="space-y-3 mb-8">
            {plan.features.map((feature) => (
              <li class="flex items-start gap-2">
                <span class="font-bold">âœ“</span>
                <span class="text-sm">{feature}</span>
              </li>
            ))}
          </ul>
          <a
            href="#"
            class={`block text-center border-2 px-6 py-3 font-bold uppercase transition-colors ${
              plan.popular
                ? "border-white bg-white text-accent hover:bg-transparent hover:text-white"
                : "border-black bg-black text-white hover:bg-accent hover:border-accent"
            }`}
          >
            {plan.cta}
          </a>
        </div>
      ))}
    </div>
  </div>
</section>

