---
import { Icon } from "astro-icon/components";

const plans = [
  {
    name: "Free",
    price: "$0",
    period: "",
    description:
      "Perfect for evaluating Helpmaton with 7-day access.",
    icon: "heroicons:gift",
    badge: "7-day access",
    features: [
      "1 Workspace",
      "1 Agent",
      "7-day access",
      "10 Documents (1 MB total)",
      "50 AI messages per day",
      "10 free web searches/day",
      "2 app connections",
      "Agent limits (daily/monthly/yearly)",
      "48h detailed memory, 30d summaries",
      "No credit card required",
    ],
    cta: "Get Started",
    popular: false,
  },
  {
    name: "Starter",
    price: "$29",
    period: "/month",
    description:
      "For individuals and small projects. Create up to 5 agents and manage one workspace.",
    icon: "heroicons:sparkles",
    features: [
      "1 Workspace",
      "5 Agents",
      "100 Documents (10 MB total)",
      "2,500 AI messages per day",
      "10 free web searches/day",
      "10 app connections",
      "Agent limits (daily/monthly/yearly)",
      "Longer memory history",
      "Email Support",
      "No credit card required",
    ],
    cta: "Start Trial",
    popular: false,
  },
  {
    name: "Pro",
    price: "$99",
    period: "/month",
    description:
      "For teams that need multiple workspaces and more agents. Includes unlimited team members.",
    icon: "heroicons:rocket-launch",
    features: [
      "5 Workspaces",
      "50 Agents",
      "1,000 Documents (100 MB total)",
      "25,000 AI messages per day",
      "10 free web searches/day",
      "50 app connections",
      "Agent limits (daily/monthly/yearly)",
      "Unlimited managers (shared access)",
      "240h detailed memory, 120d summaries",
      "Priority Support",
    ],
    cta: "Start Trial",
    popular: true,
  },
  {
    name: "Enterprise",
    price: "Custom",
    period: "",
    description:
      "For organizations that need custom limits, dedicated support, and SLA guarantees.",
    icon: "heroicons:building-office",
    features: [
      "Unlimited Workspaces",
      "Unlimited Agents",
      "Unlimited Documents",
      "Unlimited AI messages per day",
      "10 free web searches/day",
      "Unlimited app connections",
      "Agent limits (daily/monthly/yearly)",
      "Dedicated Support",
      "SLA Guarantee",
    ],
    cta: "Contact Sales",
    popular: false,
  },
];
---

<section
  id="pricing"
  class="bg-gradient-to-b from-neutral-50 to-white p-8 py-20 relative overflow-hidden"
>
  <!-- Decorative background -->
  <div class="absolute inset-0 opacity-5">
    <div
      class="absolute top-0 left-1/4 w-96 h-96 bg-primary-400 rounded-full blur-3xl"
    >
    </div>
    <div
      class="absolute bottom-0 right-1/4 w-96 h-96 bg-accent-400 rounded-full blur-3xl"
    >
    </div>
  </div>

  <div class="max-w-6xl mx-auto relative z-10">
    <div class="mb-16 text-center">
      <div
        class="inline-block px-4 py-2 bg-accent-100 text-accent-700 rounded-full text-sm font-semibold mb-4"
      >
        Simple Pricing
      </div>
      <h2 class="text-display-2 font-display text-neutral-900 mb-4">
        Choose the plan that <span class="text-primary-600">works</span> for you
      </h2>
      <p class="text-lg text-neutral-600 max-w-2xl mx-auto mb-2">
        Start free or choose a paid plan when you need more scale.
      </p>
      <p class="text-sm text-neutral-600">
        Cancel anytime. No long-term contracts.
      </p>
      <p class="text-sm text-neutral-600 mt-3">
        Have questions?{" "}
        <a href="/faq" class="text-primary-600 hover:text-primary-700 underline">
          Visit the FAQ
        </a>
      </p>
    </div>

    <div
      class="bg-gradient-to-br from-primary-50 to-accent-50 border-2 border-primary-200 rounded-xl p-6 mb-12 shadow-soft"
    >
      <h3 class="text-lg font-semibold text-neutral-900 mb-3">
        What's Included
      </h3>
      <p class="text-sm text-neutral-700 mb-3">
        Your subscription covers the Helpmaton platform. AI provider usage is
        separate.
      </p>
      <ul class="list-disc list-inside space-y-2 text-sm text-neutral-700 ml-4">
        <li>
          <strong>Platform services:</strong> hosting, workspaces, teams, document
          search, usage tracking, memory, and core features
        </li>
        <li>
          <strong>AI usage options:</strong> use your own API keys or purchase
          credits through Helpmaton
        </li>
        <li>
          <strong>Web search:</strong> 10 free searches per 24 hours, then $0.008
          each
        </li>
        <li>
          <strong>Subscription sharing:</strong> Pro includes unlimited managers
        </li>
        <li>
          <strong>Memory retention:</strong> Free keeps 48h detailed memory and 30d
          summaries; Pro keeps 240h and 120d
        </li>
        <li>
          <strong>Budget control:</strong> agent-level caps keep costs predictable
        </li>
      </ul>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {
        plans.map((plan) => (
          <div
            class={`p-8 rounded-xl shadow-soft transition-all hover:scale-105 ${
              plan.popular
                ? "bg-gradient-to-br from-primary-600 to-primary-700 text-white shadow-colored border-2 border-primary-500 relative overflow-hidden"
                : "bg-white border border-neutral-200 hover:border-primary-300"
            }`}
          >
            {plan.popular && (
              <>
                <div class="absolute top-0 right-0 w-32 h-32 bg-white/10 rounded-full blur-2xl" />
                <div class="text-center mb-4 relative z-10">
                  <span class="inline-block bg-white text-primary-600 px-4 py-1 font-bold text-sm rounded-full shadow-soft">
                    ‚≠ê Most Popular
                  </span>
                </div>
              </>
            )}
            <div class="flex items-center justify-center gap-2 mb-3 relative z-10">
              <span class="transform hover:scale-110 transition-transform">
                <Icon
                  name={plan.icon}
                  class={`w-10 h-10 ${plan.popular ? "text-white" : "text-primary-600"}`}
                  aria-hidden="true"
                />
              </span>
              <h3
                class={`text-2xl font-bold ${plan.popular ? "text-white" : "text-neutral-900"}`}
              >
                {plan.name}
              </h3>
            </div>
            {plan.badge && (
              <div class="text-center mb-3 relative z-10">
                <span
                  class={`inline-block px-3 py-1 text-xs font-semibold rounded-full ${
                    plan.popular
                      ? "bg-white/20 text-white"
                      : "bg-primary-100 text-primary-700"
                  }`}
                >
                  {plan.badge}
                </span>
              </div>
            )}
            <div class="mb-4 relative z-10">
              <span
                class={`text-5xl font-bold ${plan.popular ? "text-white" : "text-neutral-900"}`}
              >
                {plan.price}
              </span>
              <span
                class={`text-base ${plan.popular ? "text-white/90" : "text-neutral-600"}`}
              >
                {plan.period}
              </span>
            </div>
            <p
              class={`text-sm mb-6 ${plan.popular ? "text-white/90" : "text-neutral-600"}`}
            >
              {plan.description}
            </p>
            <ul class="space-y-3 mb-8 relative z-10">
              {plan.features.map((feature) => (
                <li class="flex items-start gap-2">
                  <Icon
                    name="heroicons:check"
                    class={`w-5 h-5 mt-0.5 shrink-0 ${plan.popular ? "text-white" : "text-primary-600"}`}
                    aria-hidden="true"
                  />
                  <span
                    class={`text-sm ${plan.popular ? "text-white/90" : "text-neutral-700"}`}
                  >
                    {feature}
                  </span>
                </li>
              ))}
            </ul>
            {plan.name === "Enterprise" ? (
              <button
                data-open-sales-modal
                class={`block w-full text-center px-6 py-3 font-bold rounded-xl transition-all cursor-pointer relative z-10 ${
                  plan.popular
                    ? "bg-white text-primary-600 hover:bg-neutral-50 shadow-large hover:scale-105"
                    : "bg-gradient-to-r from-primary-600 to-primary-700 text-white hover:from-primary-700 hover:to-primary-800 shadow-soft"
                }`}
              >
                {plan.cta}
              </button>
            ) : (
              <a
                href="https://app.helpmaton.com"
                class={`block text-center px-6 py-3 font-bold rounded-xl transition-all relative z-10 ${
                  plan.popular
                    ? "bg-white text-primary-600 hover:bg-neutral-50 shadow-large hover:scale-105"
                    : "bg-gradient-to-r from-primary-600 to-primary-700 text-white hover:from-primary-700 hover:to-primary-800 shadow-soft"
                }`}
              >
                {plan.cta}
              </a>
            )}
          </div>
        ))
      }
    </div>
  </div>
</section>
