<div id="contact-sales-modal" class="fixed inset-0 bg-black/60 backdrop-blur-sm z-50 hidden items-center justify-center">
  <div class="bg-white rounded-xl shadow-large p-8 max-w-md mx-4 relative border-2 border-primary-200">
    <button
      id="close-modal"
      class="absolute top-4 right-4 text-2xl font-bold text-neutral-400 hover:text-primary-600 transition-colors w-8 h-8 flex items-center justify-center rounded-full hover:bg-primary-50"
      aria-label="Close modal"
    >
      ×
    </button>
    <div class="mb-4">
      <div class="inline-block px-3 py-1 bg-primary-100 text-primary-700 rounded-full text-xs font-bold mb-3">
        Enterprise Solutions
      </div>
      <h3 class="text-2xl font-bold text-neutral-900 mb-4">Contact Sales</h3>
    </div>
    <p class="text-sm text-neutral-600 mb-6 leading-relaxed">
      Ready to take your AI agent operations to the next level? Our sales team is here to help you find the perfect Enterprise solution for your organization.
    </p>
    <p class="text-sm text-neutral-700 mb-4 font-semibold">
      Reach out to us at:
    </p>
    <div class="bg-gradient-to-br from-primary-50 to-accent-50 border-2 border-primary-200 rounded-lg p-4 mb-6 shadow-soft">
      <a
        href="mailto:sales@helpmaton.com"
        class="text-lg font-bold text-primary-700 hover:text-primary-800 transition-colors inline-flex items-center gap-2"
      >
        <span>✉️</span>
        <span>sales@helpmaton.com</span>
      </a>
    </div>
    <p class="text-xs text-neutral-500 flex items-center gap-2">
      <span>⏱️</span>
      <span>We typically respond within 24 hours</span>
    </p>
  </div>
</div>

<script>
  const modal = document.getElementById('contact-sales-modal');
  const closeButton = document.getElementById('close-modal');
  const openButtons = document.querySelectorAll('[data-open-sales-modal]');

  function openModal() {
    if (modal) {
      modal.classList.remove('hidden');
      modal.classList.add('flex');
      document.body.style.overflow = 'hidden';
    }
  }

  function closeModal() {
    if (modal) {
      modal.classList.add('hidden');
      modal.classList.remove('flex');
      document.body.style.overflow = '';
    }
  }

  openButtons.forEach(button => {
    button.addEventListener('click', (e) => {
      e.preventDefault();
      openModal();
    });
  });

  if (closeButton) {
    closeButton.addEventListener('click', closeModal);
  }

  if (modal) {
    modal.addEventListener('click', (e) => {
      if (e.target === modal) {
        closeModal();
      }
    });
  }

  // Close on Escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && !modal?.classList.contains('hidden')) {
      closeModal();
    }
  });
</script>

<style>
  #contact-sales-modal {
    backdrop-filter: blur(2px);
  }
</style>

