<div id="contact-sales-modal" class="fixed inset-0 bg-black/60 backdrop-blur-sm z-50 hidden items-center justify-center">
  <div class="rounded-xl shadow-large p-8 max-w-md mx-4 relative border-2 border-neon-cyan/30 bg-surface-100 backdrop-blur-md shadow-neon-cyan">
    <button
      id="close-modal"
      class="absolute top-4 right-4 text-2xl font-bold text-neutral-400 hover:text-neon-cyan transition-colors w-8 h-8 flex items-center justify-center rounded-full hover:bg-neon-cyan/10"
      aria-label="Close modal"
    >
      ×
    </button>
    <div class="mb-4">
      <div class="inline-block px-3 py-1 bg-neon-cyan/20 text-neon-cyan rounded-full text-xs font-bold mb-3">
        Enterprise Plans
      </div>
      <h3 class="text-2xl font-bold text-[var(--text-primary)] mb-4">Contact Sales</h3>
    </div>
    <p class="text-sm text-[var(--text-muted)] mb-6 leading-relaxed">
      Ready for an Enterprise plan? Our sales team can help you find the right fit.
    </p>
    <p class="text-sm text-[var(--text-primary)] mb-4 font-semibold">
      Email us at:
    </p>
    <div class="bg-neon-cyan/10 border-2 border-neon-cyan/30 rounded-lg p-4 mb-6">
      <a
        id="contact-sales-email-link"
        href="mailto:sales@helpmaton.com"
        class="text-lg font-bold text-neon-cyan hover:text-neon-cyan-dim transition-colors inline-flex items-center gap-2"
      >
        <span>✉️</span>
        <span>sales@helpmaton.com</span>
      </a>
    </div>
    <p class="text-xs text-[var(--text-muted)] flex items-center gap-2">
      <span>⏱️</span>
      <span>We typically respond within 24 hours</span>
    </p>
  </div>
</div>

<script>
  const modal = document.getElementById('contact-sales-modal');
  const closeButton = document.getElementById('close-modal');
  const openButtons = document.querySelectorAll('[data-open-sales-modal]');

  function openModal(source?: string) {
    if (window.posthog) {
      window.posthog.capture('contact_sales_opened');
      if (source) {
        window.posthog.capture('contact_sales_clicked', { source });
      }
    }
    if (modal) {
      modal.classList.remove('hidden');
      modal.classList.add('flex');
      document.body.style.overflow = 'hidden';
    }
  }

  function closeModal() {
    if (modal) {
      modal.classList.add('hidden');
      modal.classList.remove('flex');
      document.body.style.overflow = '';
    }
  }

  openButtons.forEach(button => {
    button.addEventListener('click', (e) => {
      e.preventDefault();
      const source = (e.currentTarget as HTMLElement).getAttribute('data-source') ?? undefined;
      openModal(source);
    });
  });

  document.getElementById('contact-sales-email-link')?.addEventListener('click', () => {
    if (window.posthog) {
      window.posthog.capture('contact_sales_email_clicked');
    }
  });

  if (closeButton) {
    closeButton.addEventListener('click', closeModal);
  }

  if (modal) {
    modal.addEventListener('click', (e) => {
      if (e.target === modal) {
        closeModal();
      }
    });
  }

  // Close on Escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && !modal?.classList.contains('hidden')) {
      closeModal();
    }
  });
</script>

<style>
  #contact-sales-modal {
    backdrop-filter: blur(2px);
  }
</style>

