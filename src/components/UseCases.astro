  );
  const moreUseCases = document.getElementById("more-use-cases");

  if (toggleUseCasesButton && toggleUseCasesLabel && moreUseCases) {
    toggleUseCasesButton.addEventListener("click", () => {
      const isExpanded =
        toggleUseCasesButton.getAttribute("aria-expanded") === "true";
      toggleUseCasesButton.setAttribute(
        "aria-expanded",
        (!isExpanded).toString()
      );
      toggleUseCasesLabel.textContent = isExpanded
        ? "Show More Use Cases"
        : "Show Less Use Cases";
      moreUseCases.classList.toggle("hidden");
      moreUseCases.classList.toggle("grid");
    });
