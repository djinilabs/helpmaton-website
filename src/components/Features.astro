---
import { Icon } from "astro-icon/components";

const coreFeatures = [
  {
    title: "Workspaces",
    description:
      "Keep projects separated so teams, access, and budgets never collide.",
    icon: "heroicons:squares-2x2",
    highlight: "Keep projects separate",
  },
  {
    title: "Agent Memory",
    description:
      "Agents remember key details from conversations so answers get sharper over time.",
    icon: "heroicons:bookmark-square",
    highlight: "Context that sticks",
  },
  {
    title: "Budget Control",
    description:
      "Set daily, monthly, or yearly limits per agent and avoid surprise spend.",
    icon: "heroicons:calculator",
    highlight: "Predictable costs",
  },
  {
    title: "Quick Integrations",
    description:
      "Connect Gmail, Google Calendar, Google Drive, Notion, Slack, or Discord in minutes.",
    icon: "heroicons:puzzle-piece",
    highlight: "Connect in minutes",
  },
  {
    title: "Team Collaboration",
    description:
      "Invite teammates, set roles, and share workspaces without permission chaos.",
    icon: "heroicons:user-group",
    highlight: "Clear access control",
  },
  {
    title: "Judge Evals",
    description:
      "Automatically review conversations to improve quality and spot issues early. No human review needed.",
    icon: "heroicons:check-badge",
    highlight: "Quality you can measure",
  },
];

const moreFeatures = [
  {
    title: "AI Agents",
    description:
      "Give each agent a clear role so tasks get handled consistently and quickly.",
    icon: "heroicons:cpu-chip",
    highlight: "Always on",
  },
  {
    title: "Agent Schedules",
    description:
      "Run recurring reports and monitoring on a schedule with simple timing rules.",
    icon: "heroicons:clock",
    highlight: "Automate recurring work",
  },
  {
    title: "Custom Summaries",
    description:
      "Control how agents summarize memory by day, week, month, or quarter.",
    icon: "heroicons:document-text",
    highlight: "Summaries you control",
  },
  {
    title: "Document Management",
    description:
      "Upload Markdown or text files so agents have a reliable knowledge base.",
    icon: "heroicons:folder-open",
    highlight: "Reliable knowledge base",
  },
  {
    title: "Conversation Attachments",
    description:
      "Drop files and images into chat to give agents richer context.",
    icon: "heroicons:paper-clip",
    highlight: "Files in chat",
  },
  {
    title: "Web Search & Content Extraction",
    description:
      "Pull in current information and summarize pages when you need fresh context.",
    icon: "heroicons:globe-alt",
    highlight: "Up-to-date info",
  },
  {
    title: "Streaming Responses",
    description:
      "Show answers as they arrive for a fast, real-time chat experience.",
    icon: "heroicons:bolt",
    highlight: "Real-time UX",
  },
  {
    title: "Webhooks & API",
    description:
      "Send messages by webhook and receive AI-powered responses anywhere.",
    icon: "heroicons:link",
    highlight: "Integrate anywhere",
  },
  {
    title: "Built-in Tools",
    description:
      "Use document search, memory, web search, email, and notifications out of the box.",
    icon: "heroicons:puzzle-piece",
    highlight: "Tools included",
  },
  {
    title: "Google Workspace Integration",
    description:
      "Let agents read Gmail, manage calendars, and access Drive files.",
    icon: "heroicons:calendar-days",
    highlight: "Google in minutes",
  },
  {
    title: "Notion Integration",
    description:
      "Search, update, and manage Notion pages and databases with a few clicks.",
    icon: "heroicons:document",
    highlight: "Notion in minutes",
  },
  {
    title: "Chat Platform Bots",
    description:
      "Deploy agents in Slack or Discord so teams can chat with them directly.",
    icon: "heroicons:chat-bubble-left-right",
    highlight: "Chat-first support",
  },
  {
    title: "Notifications & Email",
    description:
      "Send updates to Slack or Discord and deliver emails when it matters.",
    icon: "heroicons:envelope",
    highlight: "Team updates",
  },
  {
    title: "Usage Analytics",
    description:
      "Track usage by day, workspace, or agent to keep costs visible.",
    icon: "heroicons:chart-bar",
    highlight: "Clear usage reports",
  },
  {
    title: "Error Tracking",
    description:
      "See failures instantly with saved conversations and clear error markers.",
    icon: "heroicons:bug-ant",
    highlight: "Spot issues fast",
  },
  {
    title: "Cost Management & Flexible Billing",
    description:
      "Use your own key or credits while limits keep spend under control.",
    icon: "heroicons:credit-card",
    highlight: "Flexible billing",
  },
  {
    title: "Agent Delegation",
    description:
      "Hand off tasks between agents so work keeps moving without bottlenecks.",
    icon: "heroicons:arrow-path",
    highlight: "Agents work together",
  },
  {
    title: "Source-Available",
    description:
      "Run it yourself when needed with source-available licensing.",
    icon: "heroicons:code-bracket-square",
    highlight: "Self-host when needed",
  },
];
---

<section
  id="features"
  class="section-dark p-8 py-20"
>
  <div class="max-w-6xl mx-auto">
    <div class="mb-16 text-center">
      <p class="section-label font-mono mb-2">Features</p>
      <div class="section-divider mb-4" aria-hidden="true" />
      <h2 class="text-display-2 font-display text-neutral-100 mb-4">
        Everything you need to run <span class="text-neon-cyan">AI agents</span>
        at scale
      </h2>
      <p class="text-lg text-neutral-400 max-w-2xl mx-auto">
        Focus on outcomes with clear control, reliable context, and fast setup
      </p>
      <div class="mt-4 text-sm text-neutral-500">
        Have questions?
        <a
          href="/faq"
          class="text-neon-cyan hover:text-neon-cyan-dim underline"
        >
          Visit the FAQ
        </a>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        coreFeatures.map((feature, index) => (
          <div
            class="reveal-item card-cyber card-tilt group p-6 hover:-translate-y-1 relative overflow-hidden transition-all"
            data-reveal
            style={`animation-delay: ${index * 60}ms`}
          >
            <div class="card-accent-bar" aria-hidden="true" />
            <div class="absolute top-3 right-3 w-2 h-2 rounded-full bg-neon-green animate-pulse opacity-80" aria-hidden="true" title="Active" />
            <div class="relative z-10 pl-1">
              <div class="mb-4 relative inline-block">
                <span class="relative transform group-hover:scale-110 transition-transform block">
                  <Icon
                    name={feature.icon}
                    class="w-10 h-10 text-neon-cyan group-hover:drop-shadow-[0_0_8px_rgba(0,245,255,0.5)] transition-all"
                    aria-hidden="true"
                  />
                </span>
              </div>
              <h3 class="text-xl font-semibold text-neutral-100 mb-3 group-hover:text-neon-cyan transition-colors">
                {feature.title}
              </h3>
              <p class="text-sm text-neutral-400 leading-relaxed mb-4">
                {feature.description}
              </p>
              <div class="pt-3 border-t border-neon-cyan/20">
                <p class="text-xs text-neon-cyan font-semibold uppercase tracking-wide font-mono">
                  {feature.highlight}
                </p>
              </div>
            </div>
          </div>
        ))
      }
    </div>
    <div class="mt-10 text-center">
      <button
        type="button"
        data-toggle-features
        aria-expanded="false"
        aria-controls="more-features"
        class="inline-flex items-center gap-2 border border-neon-cyan/50 text-neon-cyan px-6 py-3 text-sm font-semibold rounded-xl bg-surface-100/50 hover:bg-neon-cyan/10 hover:shadow-neon-cyan transition-all font-mono"
      >
        <span data-toggle-features-label>Show More Features</span>
        <span aria-hidden="true">+</span>
      </button>
    </div>
    <div
      id="more-features"
      class="hidden mt-8 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6"
    >
      {
        moreFeatures.map((feature, index) => (
          <div
            class="reveal-item card-cyber card-tilt group p-6 hover:-translate-y-1 relative overflow-hidden transition-all"
            data-reveal
            style={`animation-delay: ${index * 60}ms`}
          >
            <div class="card-accent-bar" aria-hidden="true" />
            <div class="relative z-10 pl-1">
              <div class="mb-4 relative inline-block">
                <span class="relative transform group-hover:scale-110 transition-transform block">
                  <Icon
                    name={feature.icon}
                    class="w-10 h-10 text-neon-cyan group-hover:drop-shadow-[0_0_8px_rgba(0,245,255,0.5)] transition-all"
                    aria-hidden="true"
                  />
                </span>
              </div>
              <h3 class="text-xl font-semibold text-neutral-100 mb-3 group-hover:text-neon-cyan transition-colors">
                {feature.title}
              </h3>
              <p class="text-sm text-neutral-400 leading-relaxed mb-4">
                {feature.description}
              </p>
              <div class="pt-3 border-t border-neon-cyan/20">
                <p class="text-xs text-neon-cyan font-semibold uppercase tracking-wide font-mono">
                  {feature.highlight}
                </p>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<script>
  const toggleButton = document.querySelector("[data-toggle-features]");
  const toggleLabel = document.querySelector("[data-toggle-features-label]");
  const moreFeatures = document.getElementById("more-features");

  if (toggleButton && toggleLabel && moreFeatures) {
    toggleButton.addEventListener("click", () => {
      const isExpanded = toggleButton.getAttribute("aria-expanded") === "true";
      toggleButton.setAttribute("aria-expanded", (!isExpanded).toString());
      toggleLabel.textContent = isExpanded
        ? "Show More Features"
        : "Show Less Features";
      moreFeatures.classList.toggle("hidden");
      moreFeatures.classList.toggle("grid");
    });
  }
</script>
