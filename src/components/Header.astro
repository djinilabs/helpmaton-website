<header class="bg-white/80 backdrop-blur-md sticky top-0 z-50 shadow-medium border-b border-neutral-200">
  <div class="max-w-6xl mx-auto px-8 py-4">
    <div class="flex items-center justify-between">
      <a
        href="/"
        class="flex items-center gap-3 hover:opacity-80 transition-opacity group"
      >
        <div class="relative">
          <img
            src="/images/helpmaton_logo.svg"
            alt="Helpmaton Logo"
            class="w-10 h-10 group-hover:scale-110 transition-transform"
          />
        </div>
        <span class="text-xl font-display font-bold bg-gradient-to-r from-primary-700 to-accent-700 bg-clip-text text-transparent">
          Helpmaton
        </span>
      </a>

      <nav class="flex items-center gap-2">
        <a
          href="/#pricing"
          class="px-4 py-2 text-sm font-semibold text-neutral-700 hover:text-primary-600 transition-colors rounded-lg hover:bg-primary-50"
        >
