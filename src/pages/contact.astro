---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ContactSalesModal from "../components/ContactSalesModal.astro";
import "../styles/global.css";
---

<Layout title="Contact Us - Helpmaton">
  <Header />
  <main class="min-h-screen p-8 py-16">
    <div class="max-w-4xl mx-auto">
      <div class="mb-12 text-center">
        <h1 class="text-display-2 font-display text-[var(--text-primary)] mb-4">
          Contact Us
        </h1>
        <p class="text-lg text-[var(--text-muted)]">
          We're here to help. Reach out anytime.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
        <section
          class="rounded-xl p-6 border border-neon-cyan/20 bg-surface-100/80 backdrop-blur-sm"
        >
          <h2 class="text-xl font-semibold text-[var(--text-primary)] mb-4">
            General Support
          </h2>
          <p class="mb-4 text-[var(--text-muted)] text-sm">
            Have questions or need help? We're here for you.
          </p>
          <a
            id="contact-support-email"
            href="mailto:support@helpmaton.com"
            class="inline-block bg-neon-cyan text-surface px-4 py-2 font-medium rounded-lg border border-neon-cyan/50 hover:shadow-neon-cyan transition-colors text-sm"
          >
            support@helpmaton.com
          </a>
          <p class="mt-4 text-xs text-[var(--text-muted)]">
            We typically respond within 24 hours
          </p>
        </section>

        <section
          class="rounded-xl p-6 border border-neon-cyan/20 bg-surface-100/80 backdrop-blur-sm"
        >
          <h2 class="text-xl font-semibold text-[var(--text-primary)] mb-4">
            Sales & Enterprise
          </h2>
          <p class="mb-4 text-[var(--text-muted)] text-sm">
            Need an Enterprise plan or something custom?
          </p>
          <button
            data-open-sales-modal
            data-source="contact"
            class="inline-block bg-neon-cyan text-surface px-4 py-2 font-medium rounded-lg border border-neon-cyan/50 hover:shadow-neon-cyan transition-colors text-sm cursor-pointer"
          >
            Contact Sales
          </button>
          <p class="mt-4 text-xs text-[var(--text-muted)]">Tell us what you need</p>
        </section>

        <section
          class="rounded-xl p-6 border border-neon-cyan/20 bg-surface-100/80 backdrop-blur-sm"
        >
          <h2 class="text-xl font-semibold text-[var(--text-primary)] mb-4">
            Bug Reports
          </h2>
          <p class="mb-4 text-[var(--text-muted)] text-sm">
            Found a bug? Tell us so we can fix it.
          </p>
          <a
            id="contact-bugs-email"
            href="mailto:bugs@helpmaton.com"
            class="inline-block bg-neon-cyan text-surface px-4 py-2 font-medium rounded-lg border border-neon-cyan/50 hover:shadow-neon-cyan transition-colors text-sm"
          >
            bugs@helpmaton.com
          </a>
          <p class="mt-4 text-xs text-[var(--text-muted)]">
            Include as much detail as possible
          </p>
        </section>

        <section
          class="rounded-xl p-6 border border-neon-cyan/20 bg-surface-100/80 backdrop-blur-sm"
        >
          <h2 class="text-xl font-semibold text-[var(--text-primary)] mb-4">
            Feature Requests
          </h2>
          <p class="mb-4 text-[var(--text-muted)] text-sm">
            Have an idea? We'd love to hear it.
          </p>
          <a
            href="mailto:features@helpmaton.com"
            class="inline-block bg-neon-cyan text-surface px-4 py-2 font-medium rounded-lg border border-neon-cyan/50 hover:shadow-neon-cyan transition-colors text-sm"
          >
            features@helpmaton.com
          </a>
          <p class="mt-4 text-xs text-[var(--text-muted)]">
            Your feedback shapes the product
          </p>
        </section>
      </div>

      <section
        class="rounded-xl p-6 mb-8 border border-neon-cyan/20 bg-surface-100/80 backdrop-blur-sm"
      >
        <h2 class="text-2xl font-semibold text-[var(--text-primary)] mb-4">Community</h2>
        <p class="mb-4 text-[var(--text-muted)]">
          Join our Discord to meet other users, get help, and share tips.
        </p>
        <a
          href="https://discord.gg/Zf9Q7GpuKx"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block bg-neon-cyan text-surface px-6 py-3 font-medium rounded-lg border border-neon-cyan/50 hover:shadow-neon-cyan transition-colors"
        >
          Join our Discord â†’
        </a>
      </section>

      <section
        class="bg-gradient-to-r from-neon-cyan/20 to-neon-magenta/20 rounded-xl p-6 border border-neon-cyan/30 shadow-neon-cyan text-[var(--text-primary)]"
      >
        <h2 class="text-2xl font-semibold mb-4">Before You Contact Us</h2>
        <p class="mb-4 text-[var(--text-muted)]">
          Check these resources first. You might find the answer faster.
        </p>
        <div class="flex gap-4 flex-wrap">
          <a
            href="/documentation"
            class="inline-block bg-neon-cyan text-surface px-4 py-2 font-medium rounded-lg border border-neon-cyan/50 hover:shadow-neon-cyan transition-colors text-sm"
          >
            Documentation
          </a>
          <a
            href="/getting-started"
            class="inline-block border-2 border-neon-cyan/70 bg-transparent text-neon-cyan px-4 py-2 font-medium rounded-lg hover:bg-neon-cyan hover:text-surface transition-colors text-sm"
          >
            Getting Started
          </a>
          <a
            href="https://app.helpmaton.com/docs/api"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-block border-2 border-neon-cyan/70 bg-transparent text-neon-cyan px-4 py-2 font-medium rounded-lg hover:bg-neon-cyan hover:text-surface transition-colors text-sm"
          >
            API Reference
          </a>
        </div>
      </section>
    </div>
  </main>
  <Footer />
  <ContactSalesModal />
</Layout>

<script>
  document.getElementById('contact-support-email')?.addEventListener('click', () => {
    if (window.posthog) window.posthog.capture('contact_email_clicked', { type: 'support' });
  });
  document.getElementById('contact-bugs-email')?.addEventListener('click', () => {
    if (window.posthog) window.posthog.capture('contact_email_clicked', { type: 'bugs' });
  });
</script>
