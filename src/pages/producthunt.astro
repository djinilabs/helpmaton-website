---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Logo from "../components/Logo.astro";
import ContactSalesModal from "../components/ContactSalesModal.astro";
import "../styles/global.css";
---

<Layout
  title="Helpmaton is live on Product Hunt"
  description="Simple workspaces for managing AI agents. We're live on Product Hunt â€” support us and try Helpmaton free."
>
  <Header />
  <main>
    <!-- Hero -->
    <section class="min-h-[70vh] p-8 flex items-center justify-center relative overflow-hidden hero-section-bg" id="ph-hero-section">
      <div class="hero-perspective-wrapper absolute inset-0 overflow-hidden">
        <div class="hero-perspective-grid absolute top-0 left-0 right-0 h-[200%]" aria-hidden="true" />
      </div>
      <div class="absolute inset-0 overflow-hidden pointer-events-none" aria-hidden="true">
        <div class="hero-orb-1 absolute top-1/4 left-1/4 w-96 h-96 rounded-full bg-neon-cyan blur-[120px]" />
        <div class="hero-orb-2 absolute bottom-1/3 right-1/4 w-80 h-80 rounded-full bg-neon-magenta blur-[100px]" />
        <div class="hero-orb-3 absolute top-1/2 left-1/2 w-64 h-64 rounded-full bg-neon-cyan blur-[80px] opacity-40" />
      </div>
      <div class="hero-scanlines absolute inset-0 z-[1]" aria-hidden="true" />
      <div class="max-w-4xl mx-auto text-center relative z-10 px-2">
        <!-- Product Hunt embed badge -->
        <a
          href="https://www.producthunt.com/products/helpmaton?embed=true&amp;utm_source=badge-featured&amp;utm_medium=badge&amp;utm_campaign=badge-helpmaton"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block mb-8"
          id="ph-cta"
        >
          <img
            alt="Helpmaton - Your AI agents, organized. No chaos, just workspaces. | Product Hunt"
            width="250"
            height="54"
            src="https://api.producthunt.com/widgets/embed-image/v1/featured.svg?post_id=1075532&amp;theme=dark&amp;t=1770467767263"
          />
        </a>

        <div class="flex items-center justify-center gap-3 sm:gap-4 mb-8 flex-wrap">
          <Logo class="w-12 h-12 sm:w-14 sm:h-14 flex-shrink-0 drop-shadow-[0_0_20px_rgba(0,245,255,0.4)]" />
          <h1 class="hero-title-glitch relative text-3xl sm:text-4xl md:text-5xl font-display min-w-0 inline-block">
            <span class="hero-title-shadow-cyan absolute inset-0 text-neon-cyan opacity-80" aria-hidden="true">Helpmaton</span>
            <span class="hero-title-shadow-magenta absolute inset-0 text-neon-magenta opacity-80" aria-hidden="true">Helpmaton</span>
            <span class="hero-title-text relative block bg-gradient-to-r from-neon-cyan to-neon-magenta bg-clip-text text-transparent font-bold">Helpmaton</span>
          </h1>
        </div>
        <p class="text-display-3 font-display text-white/95 mb-4">
          <span class="text-gradient-neon animate-shimmer">Simple workspaces</span> for managing AI agents
        </p>
        <p class="text-lg text-neutral-300 mb-4 max-w-2xl mx-auto leading-relaxed">
          Create AI assistants that remember your conversations, connect to your tools, and run on a schedule. Launch in minutes with Gmail, Calendar, Notion, Slack, and Discord.
        </p>
        <p class="text-sm text-neutral-400 mb-6 max-w-xl mx-auto">
          Memory that sticks Â· Integrations in minutes Â· Budget control Â· Quality you can measure
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-6">
          <a
            href="https://www.producthunt.com/products/helpmaton?launch=helpmaton"
            target="_blank"
            rel="noopener noreferrer"
            class="w-full sm:w-auto inline-flex items-center justify-center gap-2 bg-producthunt hover:bg-producthunt-700 text-white px-8 py-4 text-lg font-semibold rounded-xl shadow-lg hover:shadow-xl transition-all border border-producthunt-500/50"
            id="ph-vote"
          >
            <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
              <path d="M13.604 9.4h-3.405v3.2h3.405a1.6 1.6 0 1 0 0-3.2zM12 0C5.372 0 0 5.372 0 12s5.372 12 12 12 12-5.372 12-12S18.628 0 12 0zm1.604 14.4h-3.405V18H7.801V6h5.803a4.399 4.399 0 1 1 0 8.4z"/>
            </svg>
            Support us on Product Hunt
          </a>
          <a
            id="ph-try-free"
            href="https://app.helpmaton.com"
            class="w-full sm:w-auto btn-neon-primary inline-flex items-center justify-center text-white px-8 py-4 text-lg font-semibold rounded-xl transition-all hover:scale-[1.02]"
          >
            Try Helpmaton free
          </a>
        </div>

        <!-- Strong CTAs for homepage and pricing -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-8">
          <a
            href="/"
            class="w-full sm:w-auto btn-neon-secondary inline-flex items-center justify-center gap-2 text-neon-cyan px-8 py-4 text-lg font-semibold rounded-xl transition-all hover:scale-[1.02]"
            data-track-cta="explore_homepage"
            data-track-source="producthunt"
          >
            Explore Homepage
            <span aria-hidden="true">â†’</span>
          </a>
          <a
            href="/#pricing"
            class="w-full sm:w-auto btn-neon-secondary inline-flex items-center justify-center gap-2 text-neon-cyan px-8 py-4 text-lg font-semibold rounded-xl transition-all hover:scale-[1.02]"
            data-track-cta="see_pricing"
            data-track-source="producthunt"
          >
            See Pricing
            <span aria-hidden="true">â†’</span>
          </a>
        </div>

        <p class="mb-4">
          <span class="inline-flex items-center gap-2 px-3 py-1.5 bg-surface-100/80 backdrop-blur-sm rounded-full border border-neon-cyan/30 font-mono text-xs text-neutral-300">
            <span class="text-neon-cyan">ðŸ§©</span>
            Source-available (BSL 1.1 â†’ Apache 2.0). <a href="https://github.com/djinilabs/helpmaton" target="_blank" rel="noopener noreferrer" class="text-neon-cyan hover:text-neon-cyan-dim font-semibold underline">Self-host when you need to</a>
          </span>
        </p>
      </div>
    </section>
  </main>
  <Footer />
  <ContactSalesModal />

  <script>
    document.querySelectorAll('#ph-cta, #ph-vote').forEach((el) => {
      el?.addEventListener('click', () => {
        if (window.posthog) {
          window.posthog.capture('producthunt_click');
        }
      });
    });
    document.querySelectorAll('[data-track-cta]').forEach((el) => {
      el.addEventListener('click', () => {
        const label = el.getAttribute('data-track-cta');
        const source = el.getAttribute('data-track-source');
        if (window.posthog && label) {
          window.posthog.capture('cta_clicked', { label, ...(source && { source }) });
        }
      });
    });
    const phTryFree = document.getElementById('ph-try-free');
    if (phTryFree) {
      phTryFree.addEventListener('click', (e) => {
        if (window.posthog) {
          window.posthog.capture('cta_clicked', { label: 'try_helpmaton_free', source: 'producthunt' });
        }
        const href = (e.currentTarget as HTMLAnchorElement).href;
        e.preventDefault();
        setTimeout(() => { window.location.href = href; }, 150);
      });
    }

    // One-time glitch on load for PH hero title
    const phHeroTitle = document.querySelector('#ph-hero-section .hero-title-glitch');
    if (phHeroTitle) {
      phHeroTitle.classList.add('hero-glitch-on');
      setTimeout(() => phHeroTitle.classList.remove('hero-glitch-on'), 400);
    }
  </script>
</Layout>
