---
import Layout from "../layouts/Layout.astro";
import Logo from "../components/Logo.astro";
import "../styles/global.css";

// Kept under ~160 chars so LinkedIn/Facebook show the full description in the card
const description =
  "Headless CMS for AI agents. BYOK, real budgets, Notion/Gmail without OAuth. We handle ops, you handle logic. 2 months free Starter—use code AGNOSTIC.";
---

<Layout
  title="Move past the hype — Helpmaton | 2 months free Starter"
  description={description}
  image="/images/hero.jpg"
  imageWidth={1200}
  imageHeight={630}
  imageAlt="Helpmaton: headless CMS for AI agents. 2 months free Starter with code AGNOSTIC."
>
  <div class="min-h-screen bg-gradient-to-br from-primary-50 via-accent-50 to-neutral-50 flex flex-col">
    <!-- Minimal header: logo + login only (no nav, page is unlinked) -->
    <header class="bg-white/80 backdrop-blur-md border-b border-neutral-200/80">
      <div class="max-w-4xl mx-auto px-6 py-4 flex items-center justify-between">
        <a href="/" class="flex items-center gap-3 hover:opacity-80 transition-opacity">
          <Logo class="w-10 h-10" />
          <span
            class="text-xl font-display font-bold bg-gradient-to-r from-primary-700 to-accent-700 bg-clip-text text-transparent"
          >
            Helpmaton
          </span>
        </a>
        <a
          id="agnostic-login"
          href="https://app.helpmaton.com"
          class="px-5 py-2 text-sm font-semibold text-white bg-gradient-to-r from-primary-600 to-primary-700 hover:from-primary-700 hover:to-primary-800 rounded-lg shadow-soft transition-all"
        >
          Login
        </a>
      </div>
    </header>

    <main class="flex-1 flex items-center justify-center p-6 sm:p-10 relative overflow-hidden">
      <!-- Decorative background -->
      <div class="absolute inset-0 opacity-10 pointer-events-none">
        <div class="absolute top-20 left-10 w-72 h-72 bg-primary-400 rounded-full blur-3xl" />
        <div class="absolute bottom-20 right-10 w-96 h-96 bg-accent-400 rounded-full blur-3xl" />
      </div>

      <article class="max-w-2xl mx-auto text-center relative z-10">
        <p class="text-sm font-semibold text-primary-600 uppercase tracking-wide mb-4">
          For builders who want to ship
        </p>
        <h1 class="text-3xl sm:text-4xl font-display font-bold text-neutral-900 mb-6 leading-tight">
          Tired of &quot;AI Chatbots&quot;? Get a hosted environment where you can:
        </h1>

        <ul class="text-left space-y-4 mb-10 text-neutral-700 text-lg">
          <li class="flex items-start gap-3">
            <span class="text-primary-500 mt-0.5 shrink-0" aria-hidden="true">✓</span>
            <span><strong class="text-neutral-900">Plug in your own keys (BYOK)</strong> — your providers, your control.</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-primary-500 mt-0.5 shrink-0" aria-hidden="true">✓</span>
            <span><strong class="text-neutral-900">Set a budget that actually stops the agent</strong> — no surprise bills.</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-primary-500 mt-0.5 shrink-0" aria-hidden="true">✓</span>
            <span><strong class="text-neutral-900">Connect Notion & Gmail</strong> without writing a single line of OAuth code.</span>
          </li>
        </ul>

        <p class="text-xl font-display font-semibold text-neutral-900 mb-3">
          Helpmaton is a headless CMS for AI Agents.
        </p>
        <p class="text-neutral-600 mb-10">
          We handle the ops. You handle the logic.
        </p>

        <div class="bg-white/90 backdrop-blur-sm border-2 border-primary-200 rounded-xl p-6 mb-10 shadow-soft">
          <p class="text-neutral-800 font-medium mb-2">
            We’re giving away <strong class="text-primary-700">2 months of the Starter plan</strong> for folks who want to move past the hype and actually build.
          </p>
          <p class="text-sm text-neutral-600">
            Use code <code class="px-2 py-0.5 bg-primary-100 text-primary-800 font-mono font-bold rounded">AGNOSTIC</code> when subscribing to the Starter plan.
          </p>
        </div>

        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <a
            id="agnostic-cta"
            href="https://app.helpmaton.com"
            class="inline-block bg-gradient-to-r from-primary-600 to-primary-700 text-white px-8 py-4 text-lg font-semibold rounded-xl shadow-colored hover:shadow-large transition-all hover:scale-105 hover:from-primary-700 hover:to-primary-800"
          >
            Get 2 months free →
          </a>
          <a
            id="agnostic-learn-more"
            href="https://helpmaton.com"
            class="inline-block border-2 border-primary-600 text-primary-700 px-8 py-4 text-lg font-semibold rounded-xl bg-white/80 backdrop-blur-sm hover:bg-primary-50 transition-all"
          >
            Learn more
          </a>
        </div>

        <p class="mt-6 text-sm text-neutral-500">
          Subscribe to Starter at <a href="https://app.helpmaton.com" class="text-primary-600 hover:underline">app.helpmaton.com</a> and apply <strong>AGNOSTIC</strong> at checkout.
        </p>
      </article>
    </main>

    <!-- Minimal footer: no site nav -->
    <footer class="py-6 text-center text-sm text-neutral-500 border-t border-neutral-200/80 bg-white/40">
      <a href="https://helpmaton.com" class="text-primary-600 hover:text-primary-700 font-medium">helpmaton.com</a>
    </footer>
  </div>
  <script>
    ['agnostic-login', 'agnostic-cta', 'agnostic-learn-more'].forEach((id) => {
      const el = document.getElementById(id);
      if (!el) return;
      const label = id === 'agnostic-login' ? 'login' : id === 'agnostic-cta' ? 'get_2_months_free' : 'learn_more';
      el.addEventListener('click', (e) => {
        if (window.posthog) {
          window.posthog.capture('cta_clicked', { label, source: 'agnostic' });
        }
        const href = (e.currentTarget as HTMLAnchorElement).href;
        if (href && href.includes('app.helpmaton.com')) {
          e.preventDefault();
          setTimeout(() => { window.location.href = href; }, 150);
        }
      });
    });
  </script>
</Layout>
