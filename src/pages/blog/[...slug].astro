---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import "../../styles/global.css";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts
    .filter((entry) => !entry.data.draft)
    .map((post) => ({
      params: { slug: post.slug },
      props: { post },
    }));
}

const { post } = Astro.props;
const { Content } = await post.render();

const formatDate = (date: Date) =>
  new Intl.DateTimeFormat("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
  }).format(date);
---

<Layout title={`${post.data.title} - Helpmaton`}>
  <Header />
  <main class="min-h-screen bg-neutral-50 p-8 py-16">
    <div class="max-w-4xl mx-auto">
      <a
        href="/blog"
        class="inline-flex items-center text-sm text-neutral-600 hover:text-primary-600 mb-6"
      >
        ‚Üê Back to blog
      </a>

      <article class="bg-white rounded-lg shadow-soft p-8 border border-neutral-200">
        <header class="mb-8">
          <p class="text-sm text-neutral-500 mb-2">
            {formatDate(post.data.pubDate)}
          </p>
          <h1 class="text-display-2 font-display text-neutral-900 mb-3">
            {post.data.title}
          </h1>
          <p class="text-lg text-neutral-600 mb-4">
            {post.data.description}
          </p>
          <div class="flex flex-wrap items-center gap-3 text-sm text-neutral-500">
            <span>By {post.data.author}</span>
            {post.data.tags?.length ? (
              <div class="flex flex-wrap gap-2">
                {post.data.tags.map((tag) => (
                  <span class="text-xs font-semibold px-2 py-1 rounded-full bg-primary-50 text-primary-700">
                    {tag}
                  </span>
                ))}
              </div>
            ) : null}
          </div>
        </header>

        <div class="blog-content text-neutral-700 leading-relaxed text-lg">
          <Content />
        </div>
      </article>
    </div>
  </main>
  <Footer />
</Layout>

<style>
  .blog-content :global(h2) {
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    font-size: 1.75rem;
    font-weight: 600;
    color: #1c1917;
  }

  .blog-content :global(h3) {
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    font-size: 1.5rem;
    font-weight: 600;
    color: #1c1917;
  }

  .blog-content :global(p) {
    margin: 1.25rem 0;
    line-height: 1.8;
  }

  .blog-content :global(ul),
  .blog-content :global(ol) {
    margin: 1rem 0;
    padding-left: 1.5rem;
    line-height: 1.8;
  }

  .blog-content :global(ul) {
    list-style: disc;
  }

  .blog-content :global(ol) {
    list-style: decimal;
  }

  .blog-content :global(a) {
    color: #0d9488;
    text-decoration: underline;
    text-underline-offset: 3px;
  }

  .blog-content :global(blockquote) {
    border-left: 3px solid #0d9488;
    padding-left: 1rem;
    margin: 1.5rem 0;
    color: #44403c;
    font-style: italic;
  }

  .blog-content :global(strong) {
    color: #1c1917;
    font-weight: 600;
  }

  .blog-content :global(code) {
    font-size: 0.95em;
    background: #f5f5f4;
    padding: 0.1rem 0.35rem;
    border-radius: 0.25rem;
  }

  .blog-content :global(pre) {
    background: #0c0a09;
    color: #fafaf9;
    padding: 1.25rem;
    border-radius: 0.75rem;
    overflow-x: auto;
    margin: 1.5rem 0;
  }

  .blog-content :global(pre code) {
    background: transparent;
    padding: 0;
  }

  .blog-content :global(img) {
    border-radius: 0.75rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    margin: 2rem 0;
    max-width: 100%;
    height: auto;
  }
</style>
