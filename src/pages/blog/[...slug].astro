---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import "../../styles/global.css";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts
    .filter((entry) => !entry.data.draft)
    .map((post) => ({
      params: { slug: post.slug },
      props: { post },
    }));
}

const { post } = Astro.props;
const { Content } = await post.render();

const formatDate = (date: Date) =>
  new Intl.DateTimeFormat("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
  }).format(date);
---

<Layout
  title={`${post.data.title} - Helpmaton`}
  description={post.data.description}
  image={post.data.image}
  type="article"
>
  <Header />
  <main class="min-h-screen section-dark p-8 py-16">
    <div class="max-w-4xl mx-auto">
      <a
        href="/blog"
        class="blog-back-link inline-flex items-center gap-2 text-sm text-neutral-400 hover:text-neon-cyan mb-6 font-mono transition-colors"
      >
        <span aria-hidden="true">‚Üê</span>
        Back to blog
      </a>

      <article class="card-cyber p-8 md:p-10">
        <header class="mb-8 border-b border-neon-cyan/20 pb-6">
          <p class="text-sm text-neutral-500 font-mono mb-2">
            {formatDate(post.data.pubDate)}
          </p>
          <h1 class="text-display-2 font-display text-neutral-100 mb-3">
            {post.data.title}
          </h1>
          <p class="text-lg text-neutral-400 mb-4">
            {post.data.description}
          </p>
          <div class="flex flex-wrap items-center gap-3 text-sm text-neutral-500">
            <span>By {post.data.author}</span>
            {post.data.tags?.length ? (
              <div class="flex flex-wrap gap-2">
                {post.data.tags.map((tag) => (
                  <span class="blog-tag text-xs font-semibold font-mono px-2 py-1 rounded-full bg-neon-cyan/10 text-neon-cyan border border-neon-cyan/30">
                    {tag}
                  </span>
                ))}
              </div>
            ) : null}
          </div>
        </header>

        <div class="blog-content text-neutral-300 leading-relaxed text-lg">
          <Content />
        </div>
      </article>
    </div>
  </main>
  <Footer />
</Layout>

<style>
  .blog-content :global(h2) {
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    font-size: 1.75rem;
    font-weight: 600;
    color: var(--text-primary);
  }

  .blog-content :global(h3) {
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--text-primary);
  }

  .blog-content :global(p) {
    margin: 1.25rem 0;
    line-height: 1.8;
    color: #b8b5b0;
  }

  .blog-content :global(ul),
  .blog-content :global(ol) {
    margin: 1rem 0;
    padding-left: 1.5rem;
    line-height: 1.8;
    color: #b8b5b0;
  }

  .blog-content :global(ul) {
    list-style: disc;
  }

  .blog-content :global(ol) {
    list-style: decimal;
  }

  .blog-content :global(a) {
    color: #00f5ff;
    text-decoration: underline;
    text-underline-offset: 3px;
  }

  .blog-content :global(a:hover) {
    color: #00c4cc;
  }

  .blog-content :global(blockquote) {
    border-left: 3px solid #00f5ff;
    padding-left: 1rem;
    margin: 1.5rem 0;
    color: #b8b5b0;
    font-style: italic;
  }

  .blog-content :global(strong) {
    color: var(--text-primary);
    font-weight: 600;
  }

  .blog-content :global(code) {
    font-size: 0.95em;
    background: rgba(0, 245, 255, 0.08);
    color: #00f5ff;
    padding: 0.1rem 0.35rem;
    border-radius: 0.25rem;
    border: 1px solid rgba(0, 245, 255, 0.2);
  }

  .blog-content :global(pre) {
    background: #0a0a0f;
    color: #f5f5f4;
    padding: 1.25rem;
    border-radius: 0.75rem;
    overflow-x: auto;
    margin: 1.5rem 0;
    border: 1px solid rgba(0, 245, 255, 0.2);
    box-shadow: 0 0 20px rgba(0, 245, 255, 0.06);
  }

  .blog-content :global(pre code) {
    background: transparent;
    padding: 0;
    color: inherit;
    border: none;
  }

  .blog-content :global(img) {
    border-radius: 0.75rem;
    box-shadow: 0 0 24px rgba(0, 245, 255, 0.1);
    margin: 2rem 0;
    max-width: 100%;
    height: auto;
    border: 1px solid rgba(0, 245, 255, 0.15);
  }
</style>
