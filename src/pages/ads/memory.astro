---
import AdLayout from "../../layouts/AdLayout.astro";

const ctaUrl = "https://helpmaton.com?utm_source=ads&utm_medium=embed&utm_campaign=memory";
---

<AdLayout title="Tired of repeating yourself? - Helpmaton" description="AI agents that remember.">
  <section class="ad-tech ad-tech-memory min-h-screen flex flex-col items-center justify-center relative overflow-hidden px-6 py-10">
    <!-- Oblique shapes layer -->
    <div class="ad-shapes" aria-hidden="true">
      <div class="ad-oblique ad-oblique-1"></div>
      <div class="ad-oblique ad-oblique-2"></div>
      <div class="ad-oblique ad-oblique-3"></div>
      <div class="ad-oblique ad-oblique-4"></div>
      <div class="ad-diamond ad-diamond-1"></div>
      <div class="ad-diamond ad-diamond-2"></div>
    </div>
    <!-- Grid overlay -->
    <div class="ad-grid" aria-hidden="true"></div>
    <!-- Scanlines -->
    <div class="ad-scanlines" aria-hidden="true"></div>

    <p class="ad-ai-agents-badge relative z-10" aria-hidden="true">AI Agents</p>
    <div class="ad-text-cycle relative z-10">
      <p class="ad-cycle-line ad-cycle-line-1" data-cycle>Tired of repeating yourself?</p>
      <p class="ad-cycle-line ad-cycle-line-2" data-cycle>AI agents that remember.</p>
      <p class="ad-cycle-line ad-cycle-line-3" data-cycle>Start free â†’</p>
    </div>

    <a href={ctaUrl} target="_top" rel="noopener noreferrer" class="ad-cta ad-cta-tech ad-cta-memory mt-10 relative z-10">
      Try Helpmaton free
    </a>
  </section>

  <style>
    .ad-tech {
      background: #050508;
    }
    .ad-tech-memory {
      background: linear-gradient(165deg, #050508 0%, #0d0a14 30%, #0a0c10 100%);
    }
    .ad-shapes {
      position: absolute;
      inset: 0;
      pointer-events: none;
    }
    .ad-oblique {
      position: absolute;
      width: 40%;
      height: 120%;
      background: linear-gradient(135deg, rgba(245, 158, 11, 0.08) 0%, transparent 50%);
      transform: skewX(-18deg) rotate(-8deg);
      animation: ad-drift-wild 4s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    }
    .ad-oblique-1 { top: -20%; left: -15%; animation-delay: 0s; }
    .ad-oblique-2 { top: 10%; right: -20%; transform: skewX(12deg) rotate(5deg); animation-delay: -1s; background: linear-gradient(225deg, rgba(234, 88, 12, 0.06) 0%, transparent 60%); animation-name: ad-drift-wild-2; }
    .ad-oblique-3 { bottom: -30%; left: -10%; transform: skewX(-25deg); animation-delay: -2s; background: linear-gradient(45deg, transparent 30%, rgba(245, 158, 11, 0.05) 100%); animation-duration: 3.5s; }
    .ad-oblique-4 { top: 50%; right: -25%; width: 35%; transform: skewX(20deg) rotate(15deg); animation-delay: -0.5s; background: linear-gradient(180deg, rgba(234, 88, 12, 0.04) 0%, transparent 70%); animation-duration: 5s; }
    .ad-diamond {
      position: absolute;
      width: 80px;
      height: 80px;
      background: linear-gradient(135deg, rgba(245, 158, 11, 0.15), rgba(234, 88, 12, 0.05));
      border: 1px solid rgba(245, 158, 11, 0.2);
      transform: rotate(45deg);
      animation: ad-diamond-wild 2.5s cubic-bezier(0.34, 1.56, 0.64, 1) infinite;
    }
    .ad-diamond-1 { top: 15%; right: 20%; animation-delay: 0s; }
    .ad-diamond-2 { bottom: 25%; left: 15%; width: 50px; height: 50px; animation-delay: -1.2s; animation-duration: 2s; }
    @keyframes ad-drift-wild {
      0% { opacity: 0.5; transform: skewX(-18deg) rotate(-8deg) translate(0, 0) scale(1); }
      25% { opacity: 1; transform: skewX(-18deg) rotate(-12deg) translate(45px, -35px) scale(1.02); }
      50% { opacity: 0.8; transform: skewX(-18deg) rotate(-4deg) translate(-30px, 25px) scale(0.98); }
      75% { opacity: 1; transform: skewX(-18deg) rotate(-10deg) translate(25px, 15px) scale(1.01); }
      100% { opacity: 0.5; transform: skewX(-18deg) rotate(-8deg) translate(0, 0) scale(1); }
    }
    @keyframes ad-drift-wild-2 {
      0% { opacity: 0.6; transform: skewX(12deg) rotate(5deg) translate(0, 0); }
      33% { opacity: 1; transform: skewX(18deg) rotate(15deg) translate(-40px, -20px); }
      66% { opacity: 0.7; transform: skewX(8deg) rotate(-5deg) translate(30px, 30px); }
      100% { opacity: 0.6; transform: skewX(12deg) rotate(5deg) translate(0, 0); }
    }
    @keyframes ad-diamond-wild {
      0%, 100% { transform: rotate(45deg) scale(1); opacity: 0.7; }
      25% { transform: rotate(135deg) scale(1.25); opacity: 1; }
      50% { transform: rotate(225deg) scale(0.85); opacity: 0.9; }
      75% { transform: rotate(315deg) scale(1.15); opacity: 1; }
    }
    .ad-grid {
      position: absolute;
      inset: 0;
      background-image: linear-gradient(rgba(245, 158, 11, 0.03) 1px, transparent 1px), linear-gradient(90deg, rgba(245, 158, 11, 0.03) 1px, transparent 1px);
      background-size: 32px 32px;
      animation: ad-grid-wild 2s ease-in-out infinite;
    }
    .ad-scanlines {
      position: absolute;
      inset: 0;
      background: repeating-linear-gradient(0deg, transparent, transparent 2px, rgba(0, 0, 0, 0.15) 2px, rgba(0, 0, 0, 0.15) 4px);
      pointer-events: none;
    }
    .ad-ai-agents-badge {
      font-family: 'Orbitron', 'Space Grotesk', sans-serif;
      font-size: clamp(0.85rem, 2.5vw, 1rem);
      font-weight: 700;
      letter-spacing: 0.25em;
      text-transform: uppercase;
      color: #fef3c7;
      margin: 0 0 0.75rem 0;
      padding: 0.35rem 1rem;
      border: 1px solid rgba(245, 158, 11, 0.4);
      display: inline-block;
    }
    .ad-text-cycle {
      position: relative;
      width: 100%;
      max-width: 36rem;
      min-height: 4rem;
      text-align: center;
      margin-bottom: 0.5rem;
      padding: 0 1rem;
      box-sizing: border-box;
    }
    .ad-cycle-line {
      position: absolute;
      left: 50%;
      top: 50%;
      transform: translate(-50%, -50%);
      width: 100%;
      max-width: 100%;
      margin: 0;
      padding: 0 0.5rem;
      box-sizing: border-box;
      font-family: 'Orbitron', 'Space Grotesk', sans-serif;
      font-size: clamp(1.25rem, 5vw, 3.5rem);
      font-weight: 700;
      line-height: 1.2;
      color: #fef3c7;
      text-shadow: 0 0 20px rgba(245, 158, 11, 0.4), 0 2px 20px rgba(0,0,0,0.5);
      opacity: 0;
      visibility: hidden;
      z-index: 0;
      animation: ad-cycle-memory 5s ease-in-out infinite;
    }
    .ad-cycle-line-1 { animation-delay: 0s; }
    .ad-cycle-line-2 { animation-delay: -1.667s; }
    .ad-cycle-line-3 { animation-delay: -3.334s; }
    @keyframes ad-cycle-memory {
      0% { opacity: 1; visibility: visible; z-index: 1; transform: translate(-50%, -50%) translateY(0); }
      33.33% { opacity: 1; visibility: visible; z-index: 1; transform: translate(-50%, -50%) translateY(0); }
      38.33% { opacity: 0; visibility: hidden; z-index: 0; transform: translate(-50%, -50%) translateY(-20px); }
      100% { opacity: 0; visibility: hidden; z-index: 0; transform: translate(-50%, -50%) translateY(-20px); }
    }
    @keyframes ad-grid-wild {
      0%, 100% { opacity: 0.5; transform: scale(1); }
      50% { opacity: 1; transform: scale(1.02); }
    }
    .ad-cta-tech {
      display: inline-block;
      font-size: 1.25rem;
      font-weight: 600;
      padding: 1rem 2rem;
      border-radius: 0;
      text-decoration: none;
      transition: transform 0.2s, box-shadow 0.2s;
      clip-path: polygon(0 0, calc(100% - 12px) 0, 100% 12px, 100% 100%, 12px 100%, 0 calc(100% - 12px));
    }
    .ad-cta:hover { transform: scale(1.05); }
    .ad-cta-memory {
      background: linear-gradient(135deg, #f59e0b, #ea580c);
      color: #fff;
      border: 1px solid rgba(245, 158, 11, 0.5);
      box-shadow: 0 0 30px rgba(245, 158, 11, 0.3);
    }
    .ad-cta-memory:hover { box-shadow: 0 0 50px rgba(245, 158, 11, 0.5); }
    @media (prefers-reduced-motion: reduce) {
      .ad-oblique, .ad-diamond, .ad-grid { animation: none; }
      .ad-cycle-line { animation: none; }
      .ad-cycle-line-1 { opacity: 1; visibility: visible; }
      .ad-cycle-line-2, .ad-cycle-line-3 { opacity: 0; visibility: hidden; }
    }
  </style>
</AdLayout>
