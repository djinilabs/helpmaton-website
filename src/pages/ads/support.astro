---
import AdLayout from "../../layouts/AdLayout.astro";

const ctaUrl = "https://helpmaton.com?utm_source=ads&utm_medium=embed&utm_campaign=support";
---

<AdLayout title="Great docs, but still answering the same questions? - Helpmaton" description="Support agents in Slack and Discord.">
  <section class="ad-tech ad-tech-support min-h-screen flex flex-col items-center justify-center relative overflow-hidden px-6 py-10">
    <div class="ad-shapes" aria-hidden="true">
      <div class="ad-parallelogram ad-para-1"></div>
      <div class="ad-parallelogram ad-para-2"></div>
      <div class="ad-parallelogram ad-para-3"></div>
      <div class="ad-chevron ad-chevron-1"></div>
      <div class="ad-chevron ad-chevron-2"></div>
      <div class="ad-corner-bracket ad-corner-tl"></div>
      <div class="ad-corner-bracket ad-corner-br"></div>
    </div>
    <div class="ad-grid ad-grid-indigo" aria-hidden="true"></div>
    <div class="ad-scanlines" aria-hidden="true"></div>

    <p class="ad-ai-agents-badge relative z-10" aria-hidden="true">AI Agents</p>
    <div class="ad-text-cycle relative z-10">
      <p class="ad-cycle-line ad-cycle-line-1" data-cycle>Great docs. Same questions?</p>
      <p class="ad-cycle-line ad-cycle-line-2" data-cycle>AI agents in Slack & Discord.</p>
      <p class="ad-cycle-line ad-cycle-line-3" data-cycle>Answers from your docs.</p>
    </div>

    <a href={ctaUrl} target="_top" rel="noopener noreferrer" class="ad-cta ad-cta-tech ad-cta-support mt-10 relative z-10">
      Try Helpmaton free
    </a>
  </section>

  <style>
    .ad-tech-support {
      background: linear-gradient(140deg, #050510 0%, #0f0e24 35%, #080a18 100%);
    }
    .ad-shapes { position: absolute; inset: 0; pointer-events: none; }
    .ad-parallelogram {
      position: absolute;
      width: 45%;
      height: 80%;
      background: linear-gradient(100deg, transparent 20%, rgba(99, 102, 241, 0.07) 80%);
      transform: skewX(-12deg);
      animation: ad-para-wild 2.8s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    }
    .ad-para-1 { top: -10%; left: -20%; animation-delay: 0s; }
    .ad-para-2 { bottom: -15%; right: -15%; transform: skewX(15deg); background: linear-gradient(260deg, transparent 30%, rgba(79, 70, 229, 0.06) 100%); animation-delay: -0.9s; animation-name: ad-para-wild-2; }
    .ad-para-3 { top: 40%; left: 30%; width: 30%; height: 40%; transform: skewX(-20deg); animation-delay: -1.8s; background: linear-gradient(80deg, rgba(99, 102, 241, 0.05), transparent); animation-duration: 3.2s; }
    .ad-chevron {
      position: absolute;
      width: 0;
      height: 0;
      border-left: 25px solid transparent;
      border-right: 25px solid transparent;
      border-top: 35px solid rgba(99, 102, 241, 0.2);
      animation: ad-chevron-wild 1.5s cubic-bezier(0.34, 1.56, 0.64, 1) infinite;
    }
    .ad-chevron-1 { top: 25%; right: 20%; animation-delay: 0s; }
    .ad-chevron-2 { bottom: 20%; left: 25%; transform: rotate(180deg); border-top-color: rgba(129, 140, 248, 0.15); animation-delay: -0.7s; animation-name: ad-chevron-wild-2; }
    .ad-corner-bracket {
      position: absolute;
      width: 60px;
      height: 60px;
      border: 2px solid rgba(99, 102, 241, 0.2);
      border-bottom: none;
      border-right: none;
      animation: ad-corner-wild 0.8s steps(2, jump-none) infinite;
    }
    .ad-corner-tl { top: 15%; left: 15%; }
    .ad-corner-br { bottom: 15%; right: 15%; border-bottom: 2px solid rgba(99, 102, 241, 0.2); border-right: 2px solid rgba(99, 102, 241, 0.2); border-top: none; border-left: none; animation-delay: -0.4s; }
    @keyframes ad-para-wild {
      0%, 100% { opacity: 0.5; transform: skewX(-12deg) translate(0, 0) scale(1); }
      25% { opacity: 1; transform: skewX(-18deg) translate(40px, -40px) scale(1.03); }
      50% { opacity: 0.8; transform: skewX(-8deg) translate(-25px, 30px) scale(0.97); }
      75% { opacity: 1; transform: skewX(-14deg) translate(20px, 15px) scale(1.02); }
    }
    @keyframes ad-para-wild-2 {
      0%, 100% { opacity: 0.6; transform: skewX(15deg) translate(0, 0); }
      33% { opacity: 1; transform: skewX(22deg) translate(-50px, 35px); }
      66% { opacity: 0.7; transform: skewX(10deg) translate(35px, -40px); }
    }
    @keyframes ad-chevron-wild {
      0%, 100% { transform: translateY(0) scale(1); opacity: 0.7; }
      50% { transform: translateY(-25px) scale(1.2); opacity: 1; }
    }
    @keyframes ad-chevron-wild-2 {
      0%, 100% { transform: rotate(180deg) translateY(0) scale(1); opacity: 0.7; }
      50% { transform: rotate(180deg) translateY(25px) scale(1.15); opacity: 1; }
    }
    @keyframes ad-corner-wild {
      0%, 45%, 100% { opacity: 0.4; }
      50%, 95% { opacity: 1; }
    }
    .ad-grid-indigo {
      background-image: linear-gradient(rgba(99, 102, 241, 0.035) 1px, transparent 1px), linear-gradient(90deg, rgba(99, 102, 241, 0.035) 1px, transparent 1px);
      background-size: 36px 36px;
      animation: ad-grid-spin 12s linear infinite;
    }
    @keyframes ad-grid-spin {
      0% { opacity: 0.5; background-position: 0 0; }
      50% { opacity: 1; background-position: 18px 18px; }
      100% { opacity: 0.5; background-position: 36px 36px; }
    }
    .ad-scanlines {
      position: absolute; inset: 0;
      background: repeating-linear-gradient(0deg, transparent, transparent 2px, rgba(0, 0, 0, 0.1) 2px, rgba(0, 0, 0, 0.1) 4px);
      pointer-events: none;
    }
    .ad-ai-agents-badge {
      font-family: 'Orbitron', 'Space Grotesk', sans-serif;
      font-size: clamp(0.85rem, 2.5vw, 1rem);
      font-weight: 700;
      letter-spacing: 0.25em;
      text-transform: uppercase;
      color: #c7d2fe;
      margin: 0 0 0.75rem 0;
      padding: 0.35rem 1rem;
      border: 1px solid rgba(99, 102, 241, 0.4);
      display: inline-block;
    }
    .ad-text-cycle {
      position: relative;
      width: 100%;
      max-width: 36rem;
      min-height: 4rem;
      text-align: center;
      margin-bottom: 0.5rem;
      padding: 0 1rem;
      box-sizing: border-box;
    }
    .ad-cycle-line {
      position: absolute;
      left: 50%;
      top: 50%;
      transform: translate(-50%, -50%);
      width: 100%;
      max-width: 100%;
      margin: 0;
      padding: 0 0.5rem;
      box-sizing: border-box;
      font-family: 'Orbitron', 'Space Grotesk', sans-serif;
      font-size: clamp(1.25rem, 5vw, 3.5rem);
      font-weight: 700;
      line-height: 1.2;
      color: #c7d2fe;
      text-shadow: 0 0 25px rgba(99, 102, 241, 0.3), 0 2px 20px rgba(0,0,0,0.5);
      opacity: 0;
      visibility: hidden;
      animation: ad-cycle 15s ease-in-out infinite;
    }
    .ad-cycle-line-1 { animation-delay: 0s; }
    .ad-cycle-line-2 { animation-delay: -5s; }
    .ad-cycle-line-3 { animation-delay: -10s; }
    @keyframes ad-cycle {
      0%, 5% { opacity: 0; visibility: hidden; transform: translate(-50%, -50%) translateY(24px); }
      8%, 30% { opacity: 1; visibility: visible; transform: translate(-50%, -50%) translateY(0); }
      33%, 100% { opacity: 0; visibility: hidden; transform: translate(-50%, -50%) translateY(-24px); }
    }
    .ad-cta-tech {
      display: inline-block;
      font-size: 1.25rem;
      font-weight: 600;
      padding: 1rem 2rem;
      border-radius: 0;
      text-decoration: none;
      transition: transform 0.2s, box-shadow 0.2s;
      clip-path: polygon(0 12px, 12px 0, 100% 0, 100% calc(100% - 12px), calc(100% - 12px) 100%, 0 100%);
    }
    .ad-cta:hover { transform: scale(1.05); }
    .ad-cta-support {
      background: linear-gradient(135deg, #6366f1, #4f46e5);
      color: #fff;
      border: 1px solid rgba(99, 102, 241, 0.5);
      box-shadow: 0 0 30px rgba(99, 102, 241, 0.25);
    }
    .ad-cta-support:hover { box-shadow: 0 0 50px rgba(99, 102, 241, 0.4); }
    @media (prefers-reduced-motion: reduce) {
      .ad-parallelogram, .ad-chevron, .ad-corner-bracket, .ad-grid-indigo { animation: none; }
      .ad-cycle-line { animation: none; }
      .ad-cycle-line-1 { opacity: 1; visibility: visible; }
      .ad-cycle-line-2, .ad-cycle-line-3 { opacity: 0; visibility: hidden; }
    }
  </style>
</AdLayout>
